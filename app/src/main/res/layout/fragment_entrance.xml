<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <eightbitlab.com.blurview.BlurView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="?attr/colorTextTranslucent" />

            <RelativeLayout
                android:id="@+id/layoutPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_padding_narrow">

                <info.arybin.fearnotwords.ui.view.textview.TextViewAscii
                    android:id="@+id/textViewPost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:paddingBottom="@dimen/default_padding_narrow"
                    android:text="I love three things in the world, the sun, the moon, and you. The sun for the day, the moon for the night, and you for ever."
                    android:textSize="18sp" />

                <info.arybin.fearnotwords.ui.view.textview.TextViewNonAscii
                    android:id="@+id/textViewPostTranslation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewPost"
                    android:maxLines="2"
                    android:text="浮世万千，吾爱有三。日，月与卿。日为朝，夜为暮，卿为朝朝暮暮。"
                    android:textSize="16sp" />

                <info.arybin.fearnotwords.ui.view.textview.TextViewAscii
                    android:id="@+id/textViewUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textViewPostTranslation"
                    android:text="Post By AryBin"
                    android:textSize="18sp" />

            </RelativeLayout>

            <View
                android:id="@+id/separatorBottom"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="?attr/colorTextTranslucent" />

            <LinearLayout
                android:id="@+id/layoutEntrance"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutAnimation="@anim/in_entrance"
                android:orientation="vertical"
                android:paddingLeft="@dimen/default_padding_wide"
                android:paddingRight="@dimen/default_padding_wide">

                <info.arybin.fearnotwords.ui.view.layout.SlideLayout
                    android:id="@+id/layoutEntranceNew"
                    android:layout_width="match_parent"


                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/default_padding">

                        <info.arybin.fearnotwords.ui.view.textview.TextViewAscii
                            android:id="@+id/textViewEntranceNew"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:text="New"
                            android:textColor="?colorTextTranslucent"
                            android:textSize="30sp" />

                        <info.arybin.fearnotwords.ui.view.textview.TextViewAscii
                            android:id="@+id/textViewNewCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@id/textViewEntranceNew"
                            android:text="4321"
                            android:textSize="10sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/default_margin_wide"
                            


                            android:src="@drawable/ic_order_random_24dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/default_margin_wide"
                            

                            android:src="@drawable/ic_order_alphabet_white_24dp" />


                    </RelativeLayout>

                </info.arybin.fearnotwords.ui.view.layout.SlideLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="?attr/colorTextTranslucent" />

                <info.arybin.fearnotwords.ui.view.layout.SlideLayout
                    android:id="@+id/layoutEntranceOld"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/default_padding">

                        <info.arybin.fearnotwords.ui.view.textview.TextViewAscii
                            android:id="@+id/textViewEntranceOld"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:text="Old"
                            android:textColor="?colorTextTranslucent"
                            android:textSize="30sp" />

                        <info.arybin.fearnotwords.ui.view.textview.TextViewAscii
                            android:id="@+id/textViewOldCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@id/textViewEntranceOld"
                            android:text="21"
                            android:textSize="10sp" />

                        <ImageView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/default_margin_wide"
                            

                            android:src="@drawable/ic_order_time_dec_white_24dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/default_margin_wide"
                            

                            android:src="@drawable/ic_order_time_dec_white_24dp" />


                    </RelativeLayout>

                </info.arybin.fearnotwords.ui.view.layout.SlideLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="?attr/colorTextTranslucent" />

                <info.arybin.fearnotwords.ui.view.layout.SlideLayout
                    android:id="@+id/layoutEntranceAll"
                    android:layout_width="match_parent"


                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"


                        android:layout_height="wrap_content"
                        android:padding="@dimen/default_padding">

                        <info.arybin.fearnotwords.ui.view.textview.TextViewAscii
                            android:id="@+id/textViewEntranceAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:text="All"
                            android:textColor="?colorTextTranslucent"
                            android:textSize="30sp" />

                        <info.arybin.fearnotwords.ui.view.textview.TextViewAscii
                            android:id="@+id/textViewAllCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@id/textViewEntranceAll"
                            android:text="4342"
                            android:textSize="10sp" />

                        <ImageView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/default_margin_wide"
                            

                            android:src="@drawable/ic_order_random_24dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/default_margin_wide"
                            

                            android:src="@drawable/ic_order_alphabet_white_24dp" />


                    </RelativeLayout>

                </info.arybin.fearnotwords.ui.view.layout.SlideLayout>


            </LinearLayout>


        </LinearLayout>

    </eightbitlab.com.blurview.BlurView>

    <com.ldoublem.loadingviewlib.view.LVGhost
        android:id="@+id/loadingGhost"
        android:layout_width="180dp"
        android:layout_height="108dp"
        android:layout_above="@id/blurView"
        android:layout_centerHorizontal="true"
        android:alpha="0" />

</RelativeLayout>





